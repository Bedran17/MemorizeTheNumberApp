<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="30dp">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_one"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="0"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_two"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="0"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_three"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="0"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_four"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="1"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_five"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="1"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_six"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="1"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_seven"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="2"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_eight"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="2"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="9"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_nine"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="2"
            android:layout_column="2" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_ten"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="3"
            android:layout_column="0" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="11"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_eleven"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="3"
            android:layout_column="1" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12"
            android:textSize="@dimen/level2_textsize"
            android:id="@+id/level2_twelve"
            android:width="@dimen/level2_width"
            android:height="@dimen/level2_height"
            android:layout_row="3"
            android:layout_column="2" />
    </GridLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom">

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="@string/back"
            android:id="@+id/level2_back"
            android:background="@color/back"
            android:textColor="@color/white"
            android:layout_gravity="right|bottom"
            android:height="75dp"
            android:layout_weight="1" />

        <Button
            android:layout_width="200dp"
            android:layout_height="75dp"
            android:text="@string/check"
            android:id="@+id/level2_check"
            android:background="@color/check"
            android:textColor="@color/white"
            android:height="75dp"
            android:onClick="showPopup"
            android:layout_weight="1" />

    </LinearLayout>
</FrameLayout>